# Configuración general
P2P_LLM_BACKEND=ollama
P2P_LOG_SYSTEM=local

# Tokens y APIs para LLMs
OPENAI_API_KEY=tu_token_de_openai_aqui
HF_API_TOKEN=tu_token_de_huggingface_aqui

# Configuración de servicios de logging externos
SENTRY_DSN=tu_dsn_de_sentry_aqui
DATADOG_API_KEY=tu_api_key_de_datadog_aqui
DATADOG_APP_KEY=tu_app_key_de_datadog_aqui
ELASTIC_URL=http://localhost:9200

# Ruta para el workspace y configuración de sesiones
WORKSPACE_DIR=./workspace
SESSIONS_DIR=./sessions

# Configuración de CrewAI
CREWAI_ENABLED=true

# Configuración del modelo Ollama (recomendado para desarrollo local)
OLLAMA_MODEL=gemma3:12b
OLLAMA_HOST=http://localhost:11434

# Preferencias de ejecución
DEBUG_MODE=false